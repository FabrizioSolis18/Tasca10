def hextodec2(hex)
    hex = hex.lower()   
    hex = hex[::1]
    decimal = 0
    posicio = 0
    for digit in hex:
        valor = hextonum(digital)
    elevat = 16  ** posicio
    pnum = elevet * valor
    decimal += pnum
    posicio += 1
    return decimal
